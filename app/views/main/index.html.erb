<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= form_tag "eval_performance", method: "post", class: "form-horizontal" do %>
        <fieldset>
          <legend>Capacitor Parameters</legend>
          <div class="well">
            <div class="form-group">
              <div class="col-lg-12">
                <%= label_tag(:workloadlist, "Workloads:", class: "col-lg-2 control-label") %>
                <%= select_tag(:workloadlist, options_for_select([ 100,200,300,400,500,600,700,800,900,1000 ], 100), class: "form-control", multiple: true, size:10) %>
                <span class="help-block">Select the workloads you wish to apply over your application. Hold the 'Ctrl' key while you click to select multiple workload values.</span>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-6">
                <%= label_tag(:workload_attitude, "Workload:", class: "col-lg-2 control-label") %>
                <%= select_tag(:workload_attitude, options_for_select([ "optimistic", "conservative", "pessimistic" ]), class: "form-control") %>
              </div>
              <div class="col-lg-6">
                <%= label_tag(:configuration_attitude, "Configuration:", class: "col-lg-2 control-label") %>
                <%= select_tag(:configuration_attitude, options_for_select([ "optimistic", "conservative", "pessimistic" ]), class: "form-control") %>
              </div>
              <span class="help-block">Select here the attitude taken when navigating through the workloads and the deployment space.</span>
            </div>
            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-8">
                <%= submit_tag("Execute", class: "btn btn-primary") %>                
              </div>
            </div>
          </div>
        </fieldset>
      <% end %>
    </div>
    <div class="col-md-8">
      <legend>Results</legend>
      <div class="well">
        <div class="list-group">
          <div class="list-group-item">
            <h4 class="list-group-item-heading">Stats</h4>
            <p class="list-group-item-text">Number of real executions: <%= @executions %></p>
            <p class="list-group-item-text">Execution total cost: <%= @cost.round(3) %></p>
          </div>
          <div class="list-group-item">
            <h4 class="list-group-item-heading">Candidate configurations</h4>
            <p class="list-group-item-text">Based on response times and cost per user, the best configurations capable of handling the specified workload are shown below ordered by price per hour:</p>
            <div class="list-group">
              <% if @candidates.size > 0 %>
                <% @candidates.keys.sort.each do |wkl| %>
                  <div class="list-group-item">
                    Workload <%= wkl %>:
                    <p>
                      <%= @candidates[wkl].sort {|x,y| x.price <=> y.price }.map {|c| c.fullname}.join(", ") %>
                    </p>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>